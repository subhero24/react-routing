{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "react-hooks"],
	"rules": {
		"no-empty": "warn",
		"no-debugger": "warn",
		"no-unused-vars": ["warn", { "ignoreRestSiblings": true }],
		"no-constant-condition": "off",
		"no-inner-declarations": "off",
		"react/prop-types": "warn"
	}
}
